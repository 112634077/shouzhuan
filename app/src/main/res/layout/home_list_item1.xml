<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/sl_selected_indicator_height">

  <LinearLayout
      android:id="@+id/moneti_linear"
      android:layout_width="match_parent"
      android:layout_height="@dimen/eighty"
      android:weightSum="@integer/three"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/monetization_item1_title"
        android:layout_width="@dimen/zero_db"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_db"
        android:layout_weight="@integer/two"
        android:ellipsize="end"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈上课了的解放了圣诞节福利速度" />

    <ImageView
        android:id="@+id/monetization_item1_image"
        android:layout_width="@dimen/zero_db"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/five_db"
        android:layout_weight="@integer/one"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/presence_video_busy" />
  </LinearLayout>


  <TextView
      android:id="@+id/monetization_item1_source"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/moneti_linear"
      android:layout_marginBottom="@dimen/five_db"
      android:text="TextView" />
</RelativeLayout>