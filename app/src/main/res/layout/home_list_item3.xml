<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/text_margin">

    <TextView
        android:id="@+id/home_item3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/three"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="@integer/three">

        <ImageView
            android:id="@+id/home_item3_image1"
            android:layout_width="@integer/zzro"
            android:layout_height="@dimen/eighty"
            android:layout_weight="@integer/one"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
             />

        <ImageView
            android:id="@+id/home_item3_image2"
            android:layout_width="@integer/zzro"
            android:layout_height="@dimen/eighty"
            android:layout_marginLeft="@dimen/five_db"
            android:layout_weight="@integer/one"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/home_item3_image3"
            android:layout_width="@integer/zzro"
            android:layout_height="@dimen/eighty"
            android:layout_marginLeft="@dimen/five_db"
            android:layout_weight="@integer/one"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/home_item3_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sl_arc_height" />

</LinearLayout>